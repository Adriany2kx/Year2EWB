<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
 <link rel="stylesheet" href="/css/profile.css" />

</head>
<body>
   <script src="/js/profile.js"></script>
  <div class="container">
    <header class="header">
      <h1>Profile</h1>
      <button class="settings-btn">
         <i class="fa-solid fa-gear"></i>
      </button>
    </header>

    <div class="profile-pic">
      <div class="initials">JD</div>
    </div>

    <button class="edit-btn" id="editProfileBtn">edit your profile</button>

    <!-- Edit Profile Modal -->
    <div id="editProfileModal" class="modal">
      <div class="modal-content profile-modal-content">
        <button id="closeEditProfileModal" class="modal-close-btn">&times;</button>
        <h2 class="modal-title">Edit Profile</h2>
        <form id="editProfileForm" enctype="multipart/form-data">
          <div class="profile-avatar-upload">
            <img id="profileAvatarPreview" src="/images/default-avatar.png" alt="Avatar" class="profile-avatar-img">
            <input type="file" name="avatar" accept="image/*" class="profile-avatar-input">
            <button type="button" id="removeAvatarBtn" class="profile-avatar-remove">Remove</button>
          </div>
          <label>Full Name<input type="text" name="fullName" required class="profile-input"></label>
          <label>Username<input type="text" name="username" required class="profile-input"></label>
          <label>Display Name<input type="text" name="displayName" class="profile-input"></label>
          <label>Bio<textarea name="bio" rows="2" class="profile-input"></textarea></label>
          <label>Gender
            <select name="gender" class="profile-input">
              <option value="">Prefer not to say</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>
          </label>
          <label>Date of Birth<input type="date" name="dob" class="profile-input"></label>
          <label>Email<input type="email" name="email" required class="profile-input"></label>
          <label>Phone<input type="tel" name="phone" class="profile-input"></label>
          <label>Location<input type="text" name="location" class="profile-input"></label>
          <hr class="profile-modal-divider">
          <h3 class="profile-modal-subtitle">Account & Security</h3>
          <label><input type="checkbox" name="twoFactor"> Two-factor authentication</label><br>
          <label><input type="checkbox" name="accountPrivate"> Account is private</label><br>
          <label>Linked Accounts:</label>
          <div class="profile-linked-accounts">
            <button type="button" class="profile-linked-btn">Google</button>
            <button type="button" class="profile-linked-btn">Facebook</button>
            <button type="button" class="profile-linked-btn">Apple</button>
          </div>
          <button type="submit" class="profile-modal-save">Save Changes</button>
        </form>
      </div>
    </div>

    <section class="activity-overview">
      <p>Activity Overview Section</p>
      <div class="activity-box">
        <p>My Applications: “4 job applications submitted”</p>
        <p>Volunteering Joined: “3 events joined”</p>
        <p>Workshops Attended: “2 workshops completed”</p>
        <a href="#">view all</a>
      </div>
    </section>

  <div class="menu-buttons">
  <button id="changePasswordBtn" type="button">Change Password</button>
  <form id="changePasswordForm" action="/users/resetPassword" method="POST" style="display:none; margin-top: 0.5rem;">
    <input type="password" name="newPassword" placeholder="New password" required style="margin-bottom:0.5rem; width: 100%; padding: 0.5rem;">
    <input type="password" name="newPasswordConfirmation" placeholder="Confirm new password" required style="margin-bottom:0.5rem; width: 100%; padding: 0.5rem;">
    <button type="submit" style="width: 100%;">Submit</button>
  </form>
  <button id="notificationPreferencesBtn">Notification Preferences</button>
  <!-- Notification Preferences Modal -->
  <div id="notificationModal" class="modal">
    <div class="modal-content notification-modal-content">
      <button id="closeNotificationModal" class="modal-close-btn">&times;</button>
      <h2 class="modal-title">Notification Preferences</h2>
      <form id="notificationForm">
        <h3 class="notification-section-title">1. Notification Types</h3>
        <div class="notification-section">
          <label><input type="checkbox" name="activity" checked> Activity notifications</label><br>
          <label><input type="checkbox" name="system" checked> System updates</label><br>
          <label><input type="checkbox" name="promotions"> Promotions</label><br>
          <label><input type="checkbox" name="reminders" checked> Reminders</label><br>
          <label><input type="checkbox" name="security" checked> Security alerts</label>
        </div>
        <h3 class="notification-section-title">2. Delivery Channels</h3>
        <div class="notification-section">
          <label><input type="checkbox" name="email" checked> Email</label><br>
          <label><input type="checkbox" name="push"> Push notifications</label><br>
          <label><input type="checkbox" name="sms"> SMS</label><br>
          <label><input type="checkbox" name="inapp" checked> In-app only</label><br>
          <small class="notification-note">Option to turn off a channel per notification type</small>
        </div>
        <h3 class="notification-section-title">3. Frequency Control</h3>
        <div class="notification-section">
          <label><input type="radio" name="frequency" value="immediately" checked> Immediately</label><br>
          <label><input type="radio" name="frequency" value="daily"> Daily digest</label><br>
          <label><input type="radio" name="frequency" value="weekly"> Weekly summary</label><br>
          <label><input type="radio" name="frequency" value="mute"> Mute temporarily</label>
          <select name="muteDuration" class="notification-mute-select">
            <option value="24h">24h</option>
            <option value="7d">7 days</option>
          </select>
        </div>
        <h3 class="notification-section-title">4. Privacy and Security</h3>
        <div class="notification-section">
          <small class="notification-note">You’ll get notified when someone comments on your post.</small><br>
          <label><input type="checkbox" name="sensitive" checked> Opt-in for sensitive alerts (logins, account changes)</label>
        </div>
        <h3 class="notification-section-title">5. UI Features</h3>
        <div class="notification-section">
          <button type="button" id="selectAllBtn" class="notification-btn">Select All</button>
          <button type="button" id="deselectAllBtn" class="notification-btn">Deselect All</button>
        </div>
        <h3 class="notification-section-title">6. Device-specific Preferences</h3>
        <div class="notification-section">
          <label><input type="checkbox" name="mobilePush"> Allow push notifications on mobile</label><br>
          <label><input type="checkbox" name="desktopPush"> Allow push notifications on desktop</label>
        </div>
        <h3 class="notification-section-title">7. Reset and Defaults</h3>
        <div class="notification-section">
          <button type="button" id="resetDefaultsBtn" class="notification-btn">Reset to Default</button>
          <button type="button" id="previewBtn" class="notification-btn">Preview Notification</button>
        </div>
        <button type="submit" class="notification-modal-save">Save Preferences</button>
      </form>
    </div>
  </div>
  <button>Language Settings</button>
  <button>Help / FAQ</button>
</div>

<button class="logout-btn">Logout</button>
</div>
<script src="/js/profile.js"></script>

</html>