<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/css/form.css">
        <link rel="stylesheet" href="/css/main.css">
        <link rel="stylesheet" href="/css/navigation.css">
        <link rel="stylesheet" href="/css/footer.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
        <title>Make Connect</title>
    </head>
    <body>
        <%- include('../common/navigation.ejs') %>
        <main>
            <form method="POST" id="form">
                <fieldset>
                    <legend>
                        <%= signup.title %>
                        <i class="fa-regular fa-message"></i>
                    </legend>
                    <p><%= signup.message %></p>
                    <% if (typeof errorMessage !== 'undefined') { %>
                        <p class="error"><%= errorMessage %></p>
                    <% } %>
                    <% if (typeof alerts !== 'undefined') { %>
                        <% alerts.forEach(function(alert) { %>
                            <p class="error"><%= alert.msg %></p>
                        <% }); %>
                    <% } %>
                    <input id="username" type="text" name="username" placeholder="<%= signup.usernamePlaceholder %>" required>
                    <input id="forename" type="text" name="forename" placeholder="<%= signup.forenamePlaceholder %>" required>
                    <input id="surname" type="text" name="surname" placeholder="<%= signup.surnamePlaceholder %>" required>
                    <input id="email" type="email" name="email" placeholder="<%= signup.emailPlaceholder %>" required>
                    <input id="password" type="password" name="password" placeholder="<%= signup.passwordPlaceholder %>" required>
                    <button id="submit">
                        <%= signup.submit %>
                        <i class="fa-regular fa-paper-plane"></i>
                    </button>
                    <p id="login"><%= signup.account %></p>
                    <a href="/users/login"><%= signup.login %></a>
                </fieldset>
            </form>
        </main>
        <%- include('../common/footer.ejs') %>
    </body>
</html>